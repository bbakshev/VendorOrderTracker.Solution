@{
  Layout = "_Layout";
}

@using VendorOrderTracker.Models;

<h3>Here are all the orders for this vendor:</h3>

<ol>
@foreach (Order order in @Model.["Orders"])
{
  <li><a href='/vendors/@Model["Vendor"].Id/orders/@order.Id'>@order.Title</a></li>
  <li><a href='/vendors/@Model["Vendor"].Id/orders/@order.Id'>@order.Description</a></li>
  <li><a href='/vendors/@Model["Vendor"].Id/orders/@order.Id'>@order.Price</a></li>
}
</ol>

<p><a href='/vendors/@Model.Id/orders/new'>Add a new order</a></p>
<p><a href='/vendors'>Return to vendor list</a></p>
<p><a href='/'>Return to Main Page</a></p>