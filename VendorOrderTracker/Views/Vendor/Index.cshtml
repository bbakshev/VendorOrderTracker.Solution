@{
  Layout = "_Layout";
}

@using VendorOrderTracker.Models;

<h1>Here's the List of Vendors</h1>

@if (@Model.Count == 0)
{
  <h3>No vendors have been added yet!</h3>
}

@foreach (Vendor vendor in Model)
{
  <p><a href='/vendors/@vendor.Id'>@vendor.Name</a></p>
  <p><a href='/vendors/@vendor.Id'>@vendor.Description</a></p>
}

<p><a href='/'>Back home</a></p>